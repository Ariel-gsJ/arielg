<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Círculo</title>
</head>
<body>
    <h1>Círculo</h1>

    <label for="radio">Radio:</label>
    <input id="radio" type="number" min="0.01" step="any" required placeholder="Ingresa el radio">

    <label for="operacion">Operación:</label>
    <select id="operacion">
        <option value="area">Área</option>
        <option value="perimetro">Perímetro</option>
    </select>

    <button onclick="calcular()">Calcular</button>

    <h3 id="Resultado"></h3>

    <script>
        function calcular() {
            const radio = parseFloat(document.getElementById('radio').value);
            const operacion = document.getElementById('operacion').value;
            const resultado = document.getElementById('Resultado');

            if (isNaN(radio) || radio <= 0) {
                resultado.textContent = "Por favor, ingresa un radio válido (mayor que cero).";
                return;
            }

            if (operacion === "area") {
                const area = Math.PI * Math.pow(radio, 2);
                resultado.textContent = "Área: " + area.toFixed(2);
            } else if (operacion === "perimetro") {
                const perimetro = 2 * Math.PI * radio;
                resultado.textContent = "Perímetro: " + perimetro.toFixed(2);
            }
        }
    </script>
</body>
</html>
